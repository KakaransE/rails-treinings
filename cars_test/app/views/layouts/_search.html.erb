
<%= form_with url: "/search", method: :get do |form| %>
    <p>
    <%= form.label :make, "Ražotājs" %><br>
    <%= form.text_field :make %>
    </p>

    <p>
    <%= form.label :model, "Modelis" %><br>
    <%= form.text_field :model %>
    </p>

    <p>
    <%= form.label :fuel, "Degvielas tips" %><br>
    <%= form.text_field :fuel %>
    </p>

    <h4>Additional Options</h4>

    <p>
    <%= form.submit "Meklēt" %>
    </p>

<% end %>