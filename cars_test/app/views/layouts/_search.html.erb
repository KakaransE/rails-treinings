
<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-8">
        <br>
        <%= form_with url: "/search", method: :get do |form| %>
            <p>
            <%= form.label :make, "Ražotājs" %><br>
            <%= form.text_field :make, class: 'form-control'%>
            </p>

            <p>
            <%= form.label :model, "Modelis" %><br>
            <%= form.text_field :model, class: 'form-control' %>
            </p>

            <p>
            <%= form.label :fuel, "Degvielas tips" %><br>
            <%= form.text_field :fuel, class: 'form-control' %>
            </p>

            <h4>Additional Options</h4>

            <p>
            <%= form.submit "Meklēt", class: 'form-control' %>
            </p>

        <% end %>
    </div>
</div>